    const el = document.getElementById("tracks");

    function escapeHtml(str){
      return String(str)
        .replaceAll("&","&amp;")
        .replaceAll("<","&lt;")
        .replaceAll(">","&gt;")
        .replaceAll('"',"&quot;")
        .replaceAll("'","&#039;");
    }

    el.innerHTML = songs.map((s, idx) => {
      const tags = (s.tags || []).map(t => `<span class="tag">${escapeHtml(t)}</span>`).join("");
      const quote = s.quote?.trim() ? `<blockquote>“${escapeHtml(s.quote)}”</blockquote>` : "";
      const embed = s.embed?.trim()
        ? `<div class="embed"><iframe loading="lazy" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" src="${escapeHtml(s.embed)}"></iframe></div>`
        : "";

      return `
        <section class="card">
          <div class="card-inner">
            <div class="topline">
              <span class="trackno">Track ${idx + 1}</span>
              <div class="titleblock">
                <h2>${escapeHtml(s.title)} <span style="opacity:.8">—</span> ${escapeHtml(s.artist)}</h2>
                <p class="artist"> </p>
              </div>
            </div>

            <p class="why"><strong>Why I picked it:</strong> ${escapeHtml(s.why)}</p>
            ${quote}
            <div class="tags">${tags}</div>
          </div>
          ${embed}
        </section>
      `;
    }).join("");
